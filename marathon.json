{
  "id": "openvpn",
  "instances": 1,
  "portDefinitions": [],
  "acceptedResourceRoles":[
      "slave_public"
   ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000,
          "protocol": "tcp",
          "name": "openvpn-admin"
        },
        {
          "hostPort": 1194,
          "containerPort": 1194,
          "protocol": "udp",
          "name": "openvpnudp"
        }
      ],
      "network": "BRIDGE",
      "image": "aggress/dcos-openvpn:0.0.0-1.0",
      "forcePullImage": true,
      "privileged": true
    }
  },
   "healthChecks": [
    {
      "gracePeriodSeconds": 360,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3,
      "path": "/status",
      "portIndex": 0,
      "protocol": "MESOS_HTTPS",
      "ignoreHttp1xx": false
    }
  ],
  "cpus": 1,
  "mem": 128,
  "requirePorts": false,
  "env": {
    "OVPN_USERNAME": "admin",
    "OVPN_PASSWORD": "password"
  }
}
